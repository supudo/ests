<%= form_tag do |f| %>
<%= hidden_field_tag :user_id, params[:user_id] %>

<div class="row">
	<div class="span6 offset3">
		<div class="col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title"><%= t('details') %></h3>
				</div>
				<div class="panel-body">
					<fieldset>

						<div class="form-group">
		          <div class="checkbox">
		          	<label><input type="checkbox" id="up_selectall"><%= t('check_all') %></label>
		          </div>
							<% @permissions.each do |item| %>
		          <div class="checkbox">
		            <label><%= check_box_tag :permission_ids, item.id, @user.permissions.include?(item), :name => 'permission_ids[' + item.id.to_s + ']' %> <%= item.description %></label>
		          </div>
		          <% end %>
		        </div>

						<%= submit_tag t('button_save_changes'), class: "btn btn-lg btn-success btn-block" %>
					</fieldset>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>