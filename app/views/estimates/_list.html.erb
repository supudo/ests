  <a name="listanch"></a>
  <table class="table table-striped" style="margin-bottom: 0px;">
    <thead>
      <tr>
        <th><%= t('id') %></th>
        <th><%= t('title') %></th>
        <th><%= t('client') %></th>
        <th><%= t('project') %></th>
        <th><%= t('estimate_owner') %></th>
        <th><%= t('hours') %></th>
        <th><%= t('price') %></th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @estimates.each do |estimate| %>
      <tr>
        <td class="col-md-1 vert-align<%= estimate.is_signed ? " success" : "" %>" scope="row"><%= estimate.id %></td>
        <td class="vert-align<%= estimate.is_signed ? " success" : "" %>"><%= link_to estimate.title, estimate %></td>
        <td class="col-md-2 vert-align<%= estimate.is_signed ? " success" : "" %>"><%= Client.find_by(:id => estimate.client_id).title %></td>
        <td class="col-md-2 vert-align<%= estimate.is_signed ? " success" : "" %>"><%= Project.find_by(:id => estimate.project_id).title %></td>
        <td class="col-md-2 vert-align<%= estimate.is_signed ? " success" : "" %>">
          <a href="mailto:<%= User.find_by(:id => estimate.owner_user_id).username %>"><%= User.find_by(:id => estimate.owner_user_id).first_name %> <%= User.find_by(:id => estimate.owner_user_id).last_name %></a>
        </td>
        <td class="vert-align<%= estimate.is_signed ? " success" : "" %>"><%= estimate.total_min_hours %> <br /> <%= estimate.total_max_hours %></td>
        <td class="vert-align<%= estimate.is_signed ? " success" : "" %>" nowrap>
          <%
          if estimate.rate.currency.is_infront
            concat estimate.rate.currency.symbol + ' ' + estimate.total_min_price.to_s
          else
            concat estimate.total_min_price.to_s + ' ' + estimate.rate.currency.symbol
          end
          %>
          <br />
          <%
          if estimate.rate.currency.is_infront
            concat estimate.rate.currency.symbol + ' ' + estimate.total_max_price.to_s
          else
            concat estimate.total_max_price.to_s + ' ' + estimate.rate.currency.symbol
          end
          %>
        </td>
        <td width="1%" nowrap<%= estimate.is_signed ? " class=success" : "" %>>
          <%= button_to estimate_exporter_index_path, :method => 'get', :id => estimate.id, class: "btn btn-default btn-sm" do %>
            <%= hidden_field_tag :estimate_id, estimate.id %>
            <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
          <% end %>
        </td>
        <td width="1%" nowrap<%= estimate.is_signed ? " class=success" : "" %>>
          <%= button_to estimate, method: :delete, data: { confirm: t('delete_confirm') }, class: "btn btn-default btn-sm", :remote => true do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="center"><%= will_paginate @estimates, :renderer => BootstrapPagination::Rails, :remote => true %></div>
