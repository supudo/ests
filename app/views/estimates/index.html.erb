<% provide(:title, t('estimates')) %>
<h1><%= t('estimates') %></h1>

<div class="panel panel-default">
  <div class="panel-heading">

    <div class="input-group">

      <div class="input-group-btn">
        <button type="button" class="btn btn-primary" aria-label="Left Align">
          <%= link_to t('create_estimate'), new_estimate_path, :class => "btn-primary" %>
        </button>
      </div>

      <%= form_for_filterrific @filterrific do |f| %>
        <%= f.text_field(:search_query, class: 'form-control filterrific-periodically-observed', placeholder: t('search')) %>
      <% end %>

      <div class="input-group-btn">
        <button type="button" class="btn btn-primary">
          <%= link_to t('import_estimate'), new_estimate_importer_path, :class => "btn-primary" %>
        </button>
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><%= t('is_signed') %> <span class="caret"></span></button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to t('all'), controller: "estimates", action: "index", iss: -1 %></li>
          <li><%= link_to t('not_signed'), controller: "estimates", action: "index", iss: 0 %></li>
          <li><%= link_to t('signed'), controller: "estimates", action: "index", iss: 1 %></li>
        </ul>
      </div>

    </div>

  </div>
  <div id="estimates-list">
    <%= render partial: 'estimates/list', locals: { estimates: @estimates } %>
  </div>
</div>