<% provide(:title, t('engagement_models')) %>
<h1><%= t('engagement_models') %></h1>

<div class="panel panel-default">
  <div class="panel-heading">

    <button type="button" class="btn btn-primary" aria-label="Left Align">
      <a class="btn-primary" data-toggle="modal" data-target="#wmodal0"><%= t('create_engagement_model') %></a>
    </button>

    <!-- Modal -->
    <div class="modal fade" id="wmodal0" tabindex="-1" role="dialog" aria-labelledby="wmodal0_title" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <%= form_for @engagement_model, :remote => true do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="wmodal0_title"><%= t('engagement_model') %></h4>
          </div>
          <div class="modal-body">
            <fieldset>
              <div class="form-group<%= f.object.errors[:title].any? ? ' has-error has-feedback' : '' %>">
                <%= f.text_field :title, class: 'form-control', placeholder: t('technology'), autofocus: true %>
              </div>
            </fieldset>
          </div>
          <div class="modal-footer">
            <button id="closebtn_0" type="button" class="btn btn-default" data-dismiss="modal" style="visibility: hidden"></button>
            <%= f.submit t('button_save_changes'), class: "btn btn-primary" %>
          </div>
          <% end %>

        </div>
      </div>
    </div> <!-- / Modal -->

  </div>
  <div id="engagement_models-list">
    <%= render partial: 'engagement_models/list', locals: { engagement_models: @engagement_models } %>
  </div>
</div>

<%= will_paginate @engagement_models, :renderer => BootstrapPagination::Rails %>