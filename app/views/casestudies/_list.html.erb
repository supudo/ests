  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('id') %></th>
        <th><%= t('title') %></th>
        <th><%= t('project') %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @casestudies.each do |item| %>
      <tr>
        <th scope="row" class="vert-align"><%= item.id %></th>
        <td class="vert-align"><%= link_to item.title, item %></td>
        <td class="vert-align"><%= link_to item.project.title, item.project %></td>
        <td width="1%" nowrap>
          <%= button_to item, method: :delete, data: { confirm: t('delete_confirm') }, class: "btn btn-default btn-sm", :remote => true do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>