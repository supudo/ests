<% provide(:title, t('login')) %>

<br />
<h1><%= t('welcome_login') %></h1>
<br />

<div class="row">
    <div class="span6 offset3">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t('login') %></h3>
                </div>
                <div class="panel-body">
                    <%= form_for(:session, url: login_path) do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.email_field :username, class: 'form-control', placeholder: t('email'), autofocus: true %>
                        </div>
                        <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', placeholder: t('password') %>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me"><%= t('remember_me') %>
                            </label>
                        </div>
                        <%= f.submit t('login'), class: "btn btn-lg btn-success btn-block" %>
                    </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>