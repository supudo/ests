<% provide(:title, t('clients')) %>
<h1><%= t('clients') %></h1>


<div class="panel">
  <button type="button" class="btn btn-default" aria-label="Left Align">
    Create Client
  </button>
</div>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>&nbsp;</th>
        <th>Client</th>
        <th>Email</th>
        <th>URL</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |cli| %>
      <tr>
        <th scope="row" class="vert-align"><%= cli.id %></th>
        <td width="1%" nowrap>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </button>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>
        </td>
        <td class="vert-align"><%= cli.title %></td>
        <td class="vert-align"><a href="mailto:<%= cli.email %>">Email</a></td>
        <td class="vert-align"><a href="<%= cli.url %>" target="_blank">URL</a></td>
        <td class="vert-align"><a href="tel:<%= cli.phone %>"><%= cli.phone %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

